%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => data.page.description, :name => "description"}
    %meta{:content => data.page.author, :name => "author"}
    %title= data.page.title
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"}
    %link(rel="stylesheet" href="//fonts.googleapis.com/css?family=Russo+One|Inconsolata:400,700|Montserrat:700")
    %link(rel="stylesheet" href="/stylesheets/style.css")
    :javascript
      function heart() {
        var $heart = $(".heart");
        if($heart.is(":visible")) {
          $heart.animate({
            fontSize: $heart.css('fontSize') == '20px' ? '30px' : '20px'
          }, 500, heart);
        }
      }
      $(document).ready(function() {
        $('header').hover(function() {
          $('.easter', this).show();
          $('.main', this).hide();
          heart();
        }, function () {
          $('.easter', this).hide();
          $('.main', this).show();
        });
      });
  %body
    %a.forkme{href: "https://github.com/hybridgroup/artoo"}
      %img{src: "https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png", alt: "Fork me on GitHub"}
    .container
      %header
        %a.logo{href: '/'}
          %h1 artoo
        %span.subtitle
          .main Ruby on Robots
          .easter
            .heart â™¥
            Rubinius

        %span.menu
          = link_to "About", "", (menu_item(""))
          = link_to "Examples", "", (menu_item("examples"))
          = link_to "Docs", "", (menu_item("documentation"))
          = link_to "Hardware", "", (menu_item("hardware"))
      - unless data.page.hero.nil?
        .title Artoo is a Ruby Framework that will help you build Skynet.
        .subtitle In 1 hour, flat.
      = yield
      .footer
        .copyright
          &copy; Copyright 2012-2013
          %a{:href => "http://hybridgroup.com"} The Hybrid Group.
