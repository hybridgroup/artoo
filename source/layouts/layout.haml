%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => data.page.description, :name => "description"}
    %meta{:content => data.page.author, :name => "author"}
    %title= data.page.title
    %link(rel="stylesheet" href="stylesheets/style.css")
    %link(rel="stylesheet" href="http://fonts.googleapis.com/css?family=Russo+One")
    %link(rel="stylesheet" href="http://fonts.googleapis.com/css?family=Montserrat:700")
  %body
    .container
      %header
        %a.logo{href: '/'}
          %h1 artoo
        %span.subtitle Ruby on Robots
        %span.menu
          = link_to "About", "", (menu_item(""))
          = link_to "Examples", "", (menu_item("examples.html"))
          = link_to "Docs", "", (menu_item("documentation.html"))
          = link_to "Hardware", "", (menu_item("supported_hardware.html"))
      - unless data.page.hero.nil?
        .title Artoo is a Ruby Framework that will help you build Skynet.
        .subtitle In 1 hour, flat.
      = yield
      .footer
        .copyright
          &copy; Copyright 2012-2013
          %a{:href => "http://hybridgroup.com"} The Hybrid Group.
