.documentation
  %section.intro
    %h2 Example
    :markdown
          :::ruby
          require 'artoo'

          connection :sphero, :adaptor => :sphero, :port => '127.0.0.1:4569'
          device :sphero, :driver => :sphero

          work do
            every(1.seconds) do
              puts "Rolling..."
              sphero.set_color(rand(255),rand(255),rand(255))
              sphero.roll 20, rand(360)
            end
          end
